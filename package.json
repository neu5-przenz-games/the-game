{
  "name": "the-game",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/neu5-przenz-games/the-game",
  "author": "neu5",
  "license": "MIT",
  "engines": {
    "node": "14.15.x"
  },
  "dependencies": {
    "express": "^4.17.1",
    "phaser": "^3.52.0",
    "socket.io": "^3.1.1"
  },
  "devDependencies": {
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.3.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-clean-easy": "^1.0.2",
    "parcel-plugin-static-files-copy": "^2.5.1",
    "phaser-grid-movement-plugin": "^1.5.0",
    "socket.io-client": "^3.1.1"
  },
  "parcelCleanPaths": [
    "dist"
  ],
  "staticFiles": {
    "staticPath": "public",
    "watcherGlob": "**"
  },
  "scripts": {
    "build": "if test \"$NODE_ENV\" = \"production\"; then yarn build:prod; else yarn build:dev; fi",
    "build:prod": "NODE_ENV=production parcel build src/index.html",
    "build:dev": "NODE_ENV=development parcel build src/index.html --no-minify",
    "dev": "parcel watch src/index.html",
    "serve": "node backend/index.js",
    "test": "mocha backend/test"
  }
}
