{
  "name": "the-game",
  "version": "0.0.1",
  "main": "index.mjs",
  "repository": "https://github.com/neu5-przenz-games/the-game",
  "author": "neu5",
  "license": "MIT",
  "engines": {
    "node": "16.3.x"
  },
  "type": "module",
  "dependencies": {
    "@geckos.io/snapshot-interpolation": "^1.0.2",
    "express": "^4.17.1",
    "pathfinding": "^0.4.18",
    "phaser": "^3.52.0",
    "socket.io": "^4.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.0",
    "nodemon": "^2.0.7",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-clean-easy": "^1.0.2",
    "parcel-plugin-static-files-copy": "^2.5.1",
    "prettier": "^2.2.1",
    "socket.io-client": "^4.1.2"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "delay": "1000"
  },
  "parcelCleanPaths": [
    "dist"
  ],
  "staticFiles": {
    "staticPath": "public",
    "watcherGlob": "**"
  },
  "scripts": {
    "prebuild": "yarn extract:map",
    "build": "if test \"$NODE_ENV\" = \"production\"; then yarn build:prod; else yarn build:dev; fi",
    "build:prod": "NODE_ENV=production parcel build client/index.html",
    "build:dev": "NODE_ENV=development parcel build client/index.html --no-minify",
    "predev": "yarn extract:map",
    "dev": "parcel watch client/index.html",
    "extract:map": "node ./scripts/extractMap.mjs",
    "lint": "eslint '**/*.{mjs, js}'",
    "lint:fix": "npm run lint -- --fix",
    "serve": "nodemon server/index.mjs",
    "test": "mocha server/test --exit"
  }
}
