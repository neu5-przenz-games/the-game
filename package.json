{
  "private": true,
  "workspaces": [
    "packages/client",
    "packages/pages",
    "packages/server",
    "packages/shared"
  ],
  "staticFiles": {
    "staticPath": "../shared/public"
  },
  "packageManager": "yarn@3.1.1",
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/eslint-parser": "^7.16.5",
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "chromedriver": "^97.0.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.2",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^8.3.0",
    "nightwatch": "^1.7.6",
    "optimist": "^0.6.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "socket.io-client": "^4.1.2",
    "start-server-and-test": "^1.12.5"
  },
  "scripts": {
    "copyMapsImages": "node ./scripts/copyMapsImages.mjs",
    "extract:map": "node ./scripts/extractMap.mjs",
    "generateMocks": "node ./scripts/generateMocks.mjs",
    "prebuild": "yarn generateMocks && yarn extract:map",
    "prebuild:test": "MAP=test yarn generateMocks && MAP=test yarn extract:map",
    "prebuild:mini": "MAP=mini yarn generateMocks && MAP=mini yarn extract:map",
    "build": "yarn prebuild && yarn workspace client build && yarn postbuild",
    "build:test": "yarn prebuild:test && yarn build:dev",
    "build:html": "yarn workspace pages build:html",
    "postbuild": "yarn build:html",
    "dev:test": "yarn workspace client dev:test",
    "serve:dev": "yarn workspace server serve:dev",
    "serve:prod": "yarn workspace server serve:prod",
    "lint": "eslint '**/*.{mjs,js}'",
    "lint:fix": "npm run lint -- --fix",
    "test:unit": "PORT=1234 mocha test-unit --exit",
    "test:e2e": "start-server-and-test 'yarn serve:test' http://localhost:5000 nightwatch",
    "test:all": "yarn build:test && yarn test:unit && yarn test:e2e",
    "test": "bash scripts/bash/test.sh",
    "splitMap": "node ./scripts/splitMap.mjs",
    "splitMap:mini": "MAP=mini node ./scripts/splitMap.mjs",
    "splitMap:test": "MAP=test node ./scripts/splitMap.mjs"
  }
}
